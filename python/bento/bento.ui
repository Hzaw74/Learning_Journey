<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="BentoWindow" parent="AdwApplicationWindow">
    <property name="title">Bento</property>
    <property name="default-width">400</property>
    <property name="default-height">500</property>
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <property name="spacing">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <child>
          <object class="AdwHeaderBar"/>
        </child>
        <child>
          <object class="GtkStack" id="mode_stack">
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <child>
              <object class="GtkStackPage">
                <property name="name">stopwatch</property>
                <property name="title">Stopwatch</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                    <property name="valign">center</property>
                    <property name="spacing">12</property>
                    <property name="hexpand">true</property>
                    <child>
                      <object class="GtkLabel" id="stopwatch_label">
                        <property name="label">00:00:00</property>
                        <property name="css-classes">title-1</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="stopwatch_buttons_box">
                        <property name="spacing">6</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkButton" id="stopwatch_toggle_button">
                            <property name="label">Start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="stopwatch_reset_button">
                            <property name="label">Reset</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">timer</property>
                <property name="title">Timer</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                    <property name="valign">center</property>
                    <property name="spacing">12</property>
                    <property name="hexpand">true</property>
                    <child>
                      <object class="GtkSpinButton" id="timer_spin_button">
                        <property name="margin-bottom">12</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="timer_label">
                        <property name="label">25:00</property>
                        <property name="css-classes">title-1</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="timer_buttons_box">
                        <property name="spacing">6</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkButton" id="timer_toggle_button">
                            <property name="label">Start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="timer_reset_button">
                            <property name="label">Reset</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkStackSwitcher" id="mode_switcher">
            <property name="stack">mode_stack</property>
          </object>
        </child>
        <child>
          <object class="GtkSeparator"/>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label">To-Do List</property>
            <property name="css-classes">title-2</property>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <child>
              <object class="GtkListView" id="todo_list_view">
                <property name="model">
                  <object class="GtkNoSelection">
                    <property name="model">
                      <object class="GioListStore" id="todo_list_store"/>
                    </property>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="spacing">6</property>
            <child>
              <object class="GtkEntry" id="new_task_entry">
                <property name="placeholder-text">Add a new task...</property>
                <property name="hexpand">true</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="add_task_button">
                <property name="label">Add</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>